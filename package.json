{
  "name": "react-zoom-viewer",
  "version": "0.0.1",
  "author": "drawhale",
  "type": "module",
  "main": "dist/index.es.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:assets && tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "storybook": "pnpm build:assets && storybook dev -p 6006",
    "build:storybook": "storybook build",
    "build:assets": "pnpm build:icons && pnpm build:graphics",
    "build:icons": "node ./scripts/icons.js",
    "build:graphics": "node ./scripts/graphics.js",
    "pub": "pnpm publish",
    "update": "pnpm build && pnpm publish --no-git-checks",
    "type-check": "tsc --project ./tsconfig.json"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^2.1.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-interactions": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/blocks": "^7.3.2",
    "@storybook/react": "^7.3.2",
    "@storybook/react-vite": "^7.3.2",
    "@storybook/testing-library": "^0.2.0",
    "@tailwindcss/typography": "^0.5.9",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.14",
    "clsx": "^1.2.1",
    "csstype": "^3.1.2",
    "eslint": "^8.48.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "eslint-plugin-storybook": "^0.6.13",
    "postcss": "^8.4.25",
    "postcss-import": "^15.1.0",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prop-types": "^15.8.1",
    "storybook": "^7.3.0",
    "tailwind-merge": "^1.13.2",
    "tailwindcss": "3.4.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.2",
    "vite-plugin-dts": "^3.2.0"
  }
}
